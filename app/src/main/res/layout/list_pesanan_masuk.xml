<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/ic_bg_pesanmasuk"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_nama"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="Calon orang sukses"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/btn_listambil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/ic_bg_hijauradius10"
                android:text="ambil"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_alamat"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="Janti"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/btn_listchat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/ic_bg_hijauradius10"
                android:text="Chat"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_paket"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="Reguler"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/btn_listhapus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/ic_bg_merahradius10"
                android:text="Hapus"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>